<moqui-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/moqui-conf-3.xsd">
    <default-property name="loop_api_version" value="2025-03"/>
    <default-property name="loop_webhook_end_point" value="/rest/s1/loop/webhook/payload/${partyId}"/>

    <webapp-list>
        <webapp name="webroot">
            <!-- Loop Webhook Request Filter  -->
            <filter name="LoopWebhookFilter" class="co.hotwax.loop.LoopWebhookFilter" async-supported="true">
                <url-pattern>/rest/s1/loop/webhook/*</url-pattern>
            </filter>
        </webapp>
    </webapp-list>
</moqui-conf>