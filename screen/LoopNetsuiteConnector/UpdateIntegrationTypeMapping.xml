<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        default-menu-include="false" standalone="true">

    <parameter name="integrationMappingId" required="true"/>
    <parameter name="organizationPartyId" required="true"/>
    <parameter name="userId" required="true"/>
    <transition name="updateIntegrationTypeMapping">
        <service-call name="co.hotwax.configuration.CompanyConfigurationServices.update#NetSuiteReturnIntegrationMapping" in-map="context"/>
        <default-response url="../OrganizationDetail"/>
    </transition>

    <widgets>
        <form-single name="UpdateIntegrationTypeMapping" transition="updateIntegrationTypeMapping">
            <field name="integrationMappingId"><default-field><hidden/></default-field></field>
            <field name="organizationPartyId"><default-field><hidden/></default-field></field>
            <field name="userId"><default-field><hidden/></default-field></field>
            <field name="mappingValue" required="true">
                <default-field title="Value">
                    <text-line/>
                </default-field>
            </field>
            <field name="submitButton">
                <default-field title="Save">
                    <submit/>
                </default-field>
            </field>
        </form-single>
    </widgets>
</screen>
