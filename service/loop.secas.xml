<secas xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/service-eca-3.xsd">

    <seca id="LoopReturnStatusChange" service="update#co.hotwax.netsuite.LoopReturnHistory" when="post-service">
        <condition><expression>statusChanged</expression></condition>
        <actions>
            <service-call name="create#co.hotwax.netsuite.LoopReturnStatus" in-map="[loopReturnId:loopReturnId,
                statusId:statusId, statusDatetime: ec.user.nowTimestamp, changeReason:changeReason]"/>
        </actions>
    </seca>
</secas>