<entities xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/entity-definition-3.xsd">
    <entity entity-name="NetsuiteConfig" package="co.hotwax.netsuite" use="configuration">
        <description>
            Entity to define any additional parameters required to process netsuite
            restlet api calls and store bundle install user informations.
        </description>
        <field name="accountId" type="text-short" is-pk="true"/>
        <field name="companyName" type="text-medium"/>
        <field name="accountType" type="text-short"/>
        <field name="scriptType" type="text-medium" is-pk="true"/>
        <field name="scriptName" type="text-medium"/>
        <field name="scriptEndPoint" type="text-long"/>
    </entity>

    <entity entity-name="IntegrationTypeMapping" package="co.hotwax.netsuite" use="configuration">
        <field name="integrationMappingId" type="id" is-pk="true"/>
        <field name="systemMessageRemoteId" type="id"/>
        <field name="integrationTypeId" type="id"/>
        <field name="mappingKey" type="text-short"/>
        <field name="mappingValue" type="text-short"/>
        <field name="description" type="text-long"/>
        <field name="synced" type="text-indicator" default="'N'"/>
        <relationship type="one" title="IntegrationTypeMappingType" related="moqui.basic.Enumeration" short-alias="type">
            <key-map field-name="integrationTypeId"/>
        </relationship>
        <relationship type="one" related="moqui.service.message.SystemMessageRemote">
            <key-map field-name="systemMessageRemoteId"/>
        </relationship>
    </entity>

    <entity entity-name="LoopReturnHistory" package="co.hotwax.netsuite" use="configuration">
        <field name="loopReturnId" type="id" is-pk="true"/>
        <field name="partyId" type="id" is-pk="true"/>
        <field name="systemMessageRemoteId" type="id"/>
        <field name="shopifyOrderId" type="id"/>
        <field name="shopifyOrderName" type="id"/>
        <field name="netsuiteReturnId" type="id"/>
        <field name="statusId" type="id"/>
        <field name="createdDate" type="date-time"/>
        <field name="lastModifiedDate" type="date-time"/>
        <relationship type="one" related="moqui.basic.StatusItem">
            <key-map field-name="statusId"/>
        </relationship>
        <relationship type="one" related="moqui.service.message.SystemMessageRemote">
            <key-map field-name="systemMessageRemoteId"/>
        </relationship>
    </entity>

    <entity entity-name="LoopReturnStatus" package="co.hotwax.netsuite" cache="never">
        <field name="loopReturnStatusId" type="id" is-pk="true"></field>
        <field name="statusId" type="id"></field>
        <field name="loopReturnId" type="id"></field>
        <field name="statusDatetime" type="date-time"></field>
        <field name="changeReason" type="text-medium"></field>
        <relationship type="one" related="moqui.basic.StatusItem">
            <key-map field-name="statusId"/>
        </relationship>
        <relationship type="one" related="co.hotwax.netsuite.LoopReturnHistory">
            <key-map field-name="loopReturnId"/>
        </relationship>
    </entity>
</entities>
